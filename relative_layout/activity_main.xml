<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#222222">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="LifeCycle"
            android:textColor="#fafafa"
            android:textSize="30sp"></TextView>
    </Toolbar>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_below="@id/topPanel"
        android:background="#e1e1e1"
        android:orientation="vertical"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#363535"
        android:textSize="100sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/result">
        <!--Line 1-->
        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_CE"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="CE"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_C"
                android:layout_width="100sp"

                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/btn_CE"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="C"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_BS"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/btn_C"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="BS"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_Chia"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/btn_BS"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="/"
                android:textSize="25sp" />
        </RelativeLayout>
        <!--        Line 2-->
        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_below="@+id/line1">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_toRightOf="@+id/btn_7"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="100sp"
                android:layout_toRightOf="@+id/btn_8"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_X"
                android:layout_toRightOf="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="x"
                android:textSize="25sp" />
        </RelativeLayout>
<!--        Line 3-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/line2"
            android:id="@+id/line3"
            android:layout_height="100sp">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_toRightOf="@+id/btn_4"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_toRightOf="@+id/btn_5"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_-"
                android:layout_toRightOf="@+id/btn_6"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="-"
                android:textSize="25sp" />
        </RelativeLayout>
<!--        Line 4-->
        <RelativeLayout
            android:id="@+id/line4"
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="100sp">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_toRightOf="@+id/btn_1"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_toRightOf="@+id/btn_2"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_Cong"
                android:layout_toRightOf="@+id/btn_3"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="+"
                android:textSize="25sp" />
        </RelativeLayout>
<!--        Line 5-->
        <RelativeLayout
            android:id="@+id/line5"
            android:layout_below="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="100sp">
            <Button
                android:id="@+id/btn_CT"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="+/-"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_toRightOf="@+id/btn_CT"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#efefef"
                android:minHeight="100dp"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_toRightOf="@+id/btn_0"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="."
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_B"
                android:layout_toRightOf="@+id/btn_dot"
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#dedede"
                android:minHeight="100dp"
                android:text="="
                android:textSize="25sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>